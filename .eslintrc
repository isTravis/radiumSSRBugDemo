{ "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-quotes": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "jsx-quotes": 2,
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "comma-dangle": 0, 
    "no-console": 0,
    "no-alert": 1,
    "func-names": 0,
    "no-trailing-spaces": 0,
    "indent": [2, "tab"],
    "new-cap": 0,
    "no-unused-vars": [1, {"vars":"local"}]
  },
  "plugins": [
    "react", "import"
  ],
  "settings": { 
    "import/parser": "babel-eslint",
    "import/resolve": {
      moduleDirectory: ["node_modules", "src", "api"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  }
}
